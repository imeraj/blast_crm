<h2><%= @contact.first_name %></h2>
<hr>

<div class="row">
  <div class="col-md-8">
    <strong>First Name:</strong>
    <%= @contact.first_name %>
    <br/>
    <strong>Last Name:</strong>
    <%= @contact.last_name %>
    <br/>
    <strong>Company:</strong>
    <%= @contact.company %>
    <br/>
    <strong>Email:</strong>
    <%= @contact.email %>
    <br/>
    <strong>Phone:</strong>
    <%= @contact.phone %>
  </div>
</div>

<hr>
<div class="panel panel-primary">
  <div class="panel-heading">
    Tasks for this contact
  </div>
  <table class="table">
    <thead>
    <th>ID</th>
    <th>Title</th>
    <th>Content</th>
    <th>Created On</th>
    <th></th>
    </thead>
    <tbody>
    <% @contact.tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime("%d %b. %Y") %></td>
        <td>
          <%= link_to 'Show', [tasks, task], class: 'btn btn-primary' %>
          <%= link_to 'Edit', tasks.edit_task_path(task),
                      class: 'btn btn-primary' %>
          <%= link_to 'Destroy', [tasks, task],
                      class: 'btn btn-primary' , method: :delete,
                      data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<%= link_to 'Edit', edit_contact_path(@contact), class: "btn btn-primary" %>
<%= link_to 'Back', contacts_path, class: 'btn btn-default' %>
